extends ../layout

append scripts
  script(src='js/signupCtrl.js')
block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign up
  form(id='signup-form', method='POST')
    h5 Login Information
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Email
      .col-md-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Password
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='Password', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') Confirm Password
      .col-md-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', required)
    hr
    h5 Profile Information
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='first') First Name
      .col-md-7
        input.form-control(type='string', name='first', id='first', placeholder='First Name', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='first') Last Name
      .col-md-7
        input.form-control(type='string', name='last', id='last', placeholder='Last Name', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='first') Phone Number
      .col-md-7
        input.form-control(type='string', name='phone', id='phone', placeholder='Phone Number', autofocus, required)
    .for-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='gender') Gender
      .col-md-7
        select.form-control(name='gender')
          option(value='Male') Male
          option(value='Female') Female
    br
    .for-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='userType') User Type
      .col-md-7
        select.form-control(name='userType')
          option(value='Admin') Admin
          option(value='Coach') Coach
          option(value='Athlete') Athlete
    hr
    h5 Lifting Information
    .for-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='sport') Sport
      .col-md-7
        select.form-control(name='sport', id='sportSelector')
    br
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='bench') Max Bench Press
      .col-md-7
        input.form-control(type='number', name='bench', id='bench', placeholder='200', autofocus)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='clean') Max Clean
      .col-md-7
        input.form-control(type='number', name='clean', id='clean', placeholder='300', autofocus)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='squat') Max Squat
      .col-md-7
        input.form-control(type='number', name='squat', id='squat', placeholder='350', autofocus)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='deadlift') Max Deadlift
      .col-md-7
        input.form-control(type='number', name='deadlift', id='deadlift', placeholder='400', autofocus)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | Signup