extends layout

append scripts
    link(rel='stylesheet', href='fullcalendar/fullcalendar.css')
    script(src='js/lib/moment.min.js')
    script(src='fullcalendar/fullcalendar.js')
    script(src='js/createPhaseCtrl.js')
block content
    #calendar
    button.btn.btn-primary(type='button', data-toggle='modal', data-target='#workoutModal') Launch demo modal
    #workoutModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='workoutModalLabel', aria-hidden='true')
        .modal-dialog.modal-lg(role='document')
            .modal-content
                .modal-header
                    i.fas.fa-dumbbell.modal-dumbell
                    h5#workoutModalLabel.modal-title Create Workout
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
                .modal-body
                    form
                        .form-group
                            label(for="wo-dateSelected") Date
                            input#workoutDate.form-control(type='text' readonly)
                        .form-group
                            label(for="wo-timeSelect") Time
                            input#workoutTime.form-control(type='time' name='workoutTime' required)
                        .form-group
                            label(for='exampleFormControlInput1') Email address
                            input#exampleFormControlInput1.form-control(type='email', placeholder='name@example.com')
                        .form-group
                            label(for='exampleFormControlSelect1') Example select
                            select#exampleFormControlSelect1.form-control
                                option 1
                                option 2
                                option 3
                                option 4
                                option 5
                        .form-group
                            label(for='exampleFormControlSelect2') Example multiple select
                            select#exampleFormControlSelect2.form-control(multiple='')
                                option 1
                                option 2
                                option 3
                                option 4
                                option 5
                        .form-group
                            label(for='exampleFormControlTextarea1') Example textarea
                            textarea#exampleFormControlTextarea1.form-control(rows='3')
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    button.btn.btn-light(type='button') Archive Workout 
                    button.btn.btn-light(type='button') Create Workout

